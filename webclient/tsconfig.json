{
    "compilerOptions": {
      "module": "ES2015",
      "strict": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "build",
      "typeRoots": ["src"],
      "moduleResolution": "node"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }